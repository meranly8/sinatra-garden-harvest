<h1><%= @user.username %></h1>
<h3><%= @user.email %></h3>
<br>
<% if @user.crops.size == 0 %>
    <small><p>No harvested crops yet!</p></small>
<% end %>
<ul>
    <% @user.crops.each do |crop| %>
        <li><%= crop.season %> <%= crop.year %> - <a href="/crops/<%= crop.id %>"><%= crop.name %></a> (<%= crop.quantity %>)</li>
    <% end %>
</ul>
<br>
<br>
<br>
<% if current_user == @user %>
    <form action="/crops/new" method="get">
        <input type="submit" value="New Crop">
    </form>
<% end %>
